<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#3f1b99"
    tools:context="com.example.ernestas.myapplication65651.MainActivity">

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bLogout"
        android:background="#1f1f1f"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvViewEmail"
        android:layout_marginStart="110dp"
        android:layout_marginTop="154dp"
        android:id="@+id/tvViewEmail" />

    <Button
        android:text="Profile Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bProfileSettings"
        android:background="#250d63"
        android:textColor="#fff"
        android:layout_above="@+id/bLogout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/bCapture"
        android:background="@android:drawable/ic_menu_camera"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="400dp"
        android:id="@+id/iwCapture"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/bCapture"
        android:layout_alignParentStart="true"
        android:layout_height="250dp"
        android:layout_above="@+id/bPosts" />

    <Button
        android:text="Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bProfileSettings"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:id="@+id/bGoToPost"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bGoToPost"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:id="@+id/bPosts"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
